<h1>(自分の題名)</h1>
<h3>新規投稿ページ</h3>
<%= form_for @post do |f| %>

  <div class='form-group'>
  <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
      <div class='form-check'>
          <%= tag.label class: 'form-check-label' do %>
              <%= tag.check_box class: 'form-check-input' %>
              <%= tag.text %>
          <% end %>
      </div>
  <% end %>
</div>

# データ型がstringで自由記述の入力フォーム
  <div class="field">
    <%= f.label :歌手名 %>
    <%= f.text_field :who, :size => 30 %>
  </div>

  <div class="field">
  <%= f.label :曲名 %>
  <%= f.text_field :music, :size => 30 %>
</div>

<div class="field">
<%= f.label :詳細 %>
<%= f.text_field :content, :size => 30 %>
</div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <%= f.label :youtube_url %>
  <%= f.text_field :youtube_url, :size => 140 %>

  <%= f.submit "投稿する" %>
<% end %>

<%= link_to "一覧に戻る", posts_path %>